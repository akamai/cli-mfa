import logging
import platform

LOG_FMT = '%(asctime)s [%(levelname)s] %(threadName)s %(message)s'
log_file = None

if __name__ == "__main__":

    logging.basicConfig(filename=log_file, level=logging.INFO, format=LOG_FMT)
    logging.debug("Python %s" % platform.python_version())

    print("Work in progress, please try update later...")